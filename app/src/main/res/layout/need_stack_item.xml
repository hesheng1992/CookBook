<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:paddingLeft="5dp"
    app:cardBackgroundColor="@color/color_tanc_half"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    android:paddingRight="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="7dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/materia_name"
                android:layout_margin="3dp"
                android:textColor="@color/tab_unchecked"
                android:textSize="15sp"
                android:text="原料名字"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="用量"
                android:textSize="15sp"
                android:textColor="@color/tab_unchecked"
                android:id="@+id/materia_amount"
                android:layout_toRightOf="@+id/materia_name"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="3dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="埔料还是主料"
            android:textSize="15sp"
            android:textColor="@color/tab_unchecked"
            android:id="@+id/materia_type"
            android:layout_margin="3dp"/>

    </LinearLayout>
</android.support.v7.widget.CardView>